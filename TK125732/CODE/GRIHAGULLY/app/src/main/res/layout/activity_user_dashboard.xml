<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserDashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>




        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#090909"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:id="@+id/linearrealestate"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="27sp"
                android:clickable="true"
                android:layout_margin="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="KeyboardInaccessibleWidget">
                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/borader1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/agreement" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="real estate"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/purple_500"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:id="@+id/cardhistory"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="27sp"
                android:clickable="true"
                android:layout_margin="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/borader1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="27sp"
                android:clickable="true"
                android:id="@+id/carduserlogout"
                android:layout_margin="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="KeyboardInaccessibleWidget">
                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/borader1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="logout"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:id="@+id/carduserprofile"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="27sp"
                android:clickable="true"
                android:layout_margin="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/borader1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="profile"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>